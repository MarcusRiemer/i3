exec --no-startup-id systemctl --user start random-background.timer
exec --no-startup-id systemctl --user start xfce4-notifyd.service

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
font pango:DejaVu Sans Mono 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Shift+Return exec xfce4-terminal

# start a file explorer
bindsym $mod+e exec dolphin

bindsym $mod+l exec xscreensaver-command -l

# kill focused window [except it is virtualbox]
bindsym $mod+Shift+c kill
# bindsym $mod+Shift+c [class="VBoxSDL"] nop

bindsym $mod+dead_circumflex move scratchpad
bindsym $mod+Shift+dead_circumflex scratchpad show

# Toggle the touchpad
bindsym Scroll_Lock exec /home/marcus/bin/toggleTouchpad

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10   # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# Make a screenshot
bindsym Print exec spectacle --region

# Run programs
